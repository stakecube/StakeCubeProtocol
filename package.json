{
  "name": "stakecubeprotocol",
  "productName": "SCP Wallet",
  "version": "1.1.6",
  "description": "The StakeCube Protocol full-node and GUI for Node.js",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "node linter"
  },
  "author": "StakeCube",
  "license": "MPL-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^8.0.3",
    "electron-reloader": "^1.2.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "otplib": "^12.0.1",
    "regedit": "^3.0.3",
    "scc-js": "^1.2.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/imgs/scp.ico",
        "ignore": ["docs", ".github", ".gitignore", "linter.js", ".eslintrc.js"]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupExe": "SCP Installer.exe",
            "loadingGif": "public/imgs/spinner.gif",
            "iconUrl": "https://raw.githubusercontent.com/stakecube/StakeCubeProtocol/main/public/imgs/scp.ico",
            "setupIcon": "public/imgs/scp.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
